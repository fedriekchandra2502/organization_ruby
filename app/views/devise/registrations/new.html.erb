<div class="container">
  <div class="row justify-content-center">
      <div class="col-md-8">
          <div class="card">
                <div class="card-header">Register</div>
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="field form-group row">
                      <%= f.label :name, class: "col-md-4 col-form-label text-md-right" %><br />
                      <%= f.text_field :name, autofocus: true %>
                    </div>

                    <div class="field form-group row">
                      <%= f.label :email, class: "col-md-4 col-form-label text-md-right" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>

                    <div class="field form-group row">
                      <%= f.label :password, class: "col-md-4 col-form-label text-md-right" %>
                      <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>

                    <div class="field form-group row">
                      <%= f.label :password_confirmation, class: "col-md-4 col-form-label text-md-right" %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>

                    <div class="form-group row mb-0 actions">
                      <div class="col-md-6 offset-md-4">
                        <%= f.submit "Sign up", class: "btn btn-primary" %>
                      </div>
                    </div>
                  <% end %>
              </div>
          </div>
      </div>
  </div>
</div>