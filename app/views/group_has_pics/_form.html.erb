<%= form_with(model: [group, group_has_pic]) do |form| %>
  <% if group_has_pic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group_has_pic.errors.count, "error") %> prohibited this group_has_pic from being saved:</h2>

      <ul>
        <% group_has_pic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :group_id %>
    <%= form.text_field :group_id, class: "form-control", value: group.id, readonly: true %>
  </div>

  <div class="field form-group">
    <%= form.label :pic_name %>
    <%= form.text_field :pic_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= form.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
