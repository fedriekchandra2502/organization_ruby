<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <br>
            <form method="GET" class="form-inline" action="/groups">
                <div class="form-group">
                    <input type="text" autocomplete="off" class="form-control" name="search" placeholder="Search..">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

            <br>

            <% if current_user.admin %>
              <%= link_to 'Create New Organization', new_group_path, class: "btn btn-primary", style: "color:#FFFFFF" %>
            <br><br>
            <% end %>

            <h3>Group List</h3>

            <ul class="list-group">
                <% @groups.each do |group| %>
                    <li class="list-group-item"><%= link_to group.group_name, group_path(group.id) %></li>
                <% end %>
            </ul>

        </div>
    </div>
</div>